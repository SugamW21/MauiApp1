@page "/Login"
@using static MauiApp1.Components.Layout.MainLayout
@inject IJSRuntime JS
@inject NavigationManager Navigation

<div style="height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; background: linear-gradient(135deg, #fbb03b, #f7931e);">
    <!-- Back button in the top-left corner -->
    <button onclick="history.back()" style="position: absolute; top: 20px; left: 20px; background-color: #ffffff; border: none; border-radius: 50%; padding: 10px 15px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); cursor: pointer;">
        ⬅
    </button>

    <div style="width: 400px; padding: 30px; background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
        <h3 style="text-align: center; font-size: 24px; color: #333; margin-bottom: 20px;">Login</h3>

        <form>
            <div class="mb-3" style="margin-bottom: 20px;">
                <label for="exampleInputEmail1" class="form-label" style="font-size: 14px; color: #555; font-weight: bold;">Enter Username</label>
                <input type="text" class="form-control" id="exampleInputEmail1" @bind="username" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                <div id="emailHelp" class="form-text" style="font-size: 12px; color: #777;">We'll never share your email with anyone else.</div>
            </div>

            <div class="mb-3" style="margin-bottom: 20px;">
                <label for="exampleInputPassword1" class="form-label" style="font-size: 14px; color: #555; font-weight: bold;">Enter Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" @bind="password" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
            </div>

            <div class="mb-3" style="margin-bottom: 20px;">
                <label for="currencySelect" class="form-label" style="font-size: 14px; color: #555; font-weight: bold;">Select the Currency Type</label>
                <select id="currencySelect" class="form-select" aria-label="Default select example" @bind="currencyType" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                    <option selected>Select the currency type.</option>
                    <option value="NRS">NRS</option>
                    <option value="USD">USD</option>
                    <option value="BGP">BGP</option>
                    <option value="INRS">INRS</option>
                </select>
            </div>

            <button type="button" class="btn btn-primary" @onclick="LoginUser" style="background-color: #4CAF50; color: #fff; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; width: 100%; font-size: 14px;">Login</button>
        </form>
        <p style="text-align:center; margin-top:20px;">Don't have an account?</p>
        <NavLink class="nav-link" href="/Register" Match="NavLinkMatch.All" style="display: block; text-align: center; color: #f7931e; font-size: 14px; margin-top: 15px; text-decoration: none;">
            Register now
        </NavLink>
    </div>
</div>

<script>
    function showAlert(message) {
        alert(message);
    }
</script>
